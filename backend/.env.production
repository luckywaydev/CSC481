# Server Configuration - VPS
PORT=4000
NODE_ENV=production

# Database Configuration - แก้เป็น VPS database
DATABASE_URL="postgresql://transcription_user:csc481@localhost:5432/transcription_db"

# JWT Configuration - ⚠️ เปลี่ยน secret ใหม่สำหรับ production!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_FOR_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration - แก้เป็น domain/IP ของ VPS
FRONTEND_URL=http://YOUR_VPS_IP:3000

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=./uploads

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@transcription.com
